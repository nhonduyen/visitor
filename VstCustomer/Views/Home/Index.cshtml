@{
    ViewBag.Title = "CRM Main Stastical";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/home.js")"></script>
}
@Html.Hidden("hdUrl", Url.Action("Action", "Home"))
<h4 class="page-header" style="margin: 10px;">CRM MAIN STATISTICAL</h4>
<div class="form-inline">
    <div class="form-group">
        <label for="from">Month:</label>
        <input type="text" class="form-control" id="from" value="@DateTime.Now.ToString("yyyy-MM")">
    </div>

    <button type="button" id="btnSearch" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>Search</button>
    <button type="button" id="btnExport" class="btn btn-primary" data-url="@Url.Action("Export","Home")"><span class="glyphicon glyphicon-export"></span>Export</button>
</div>
<div class="table-responsive">
    <table id="tbMainDefault" class="table table-bordered">
        <thead>
            <tr class="tbheader">
                <th rowspan="2">Emp no</th>
                <th rowspan="2">Name</th>
                <th rowspan="2">Target</th>
                <th rowspan="2">Visited</th>
                <th colspan="3" style="text-align: center">Visit Type</th>
                <th rowspan="2">Ratio</th>
                <th rowspan="2">Team</th>
            </tr>
            <tr>
                <th>DIRECT</th>
                <th>CALL</th>
                <th>EMAIL</th>
            </tr>

        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<!-- Modal Register Visit -->
<div id="mdRegVisit" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Modify Target</h4>
            </div>
            <div class="modal-body">
                <form id="frmRegVisit" role="form">
                    <div class="row">
                        <div class="col-sm-8"></div>
                        <div class="col-sm-4">
                            <button id="btnSave" class="btn btn-primary" type="submit" data-action="0" data-emp=""><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="tdleft">
                                        <label>Emp. Id</label></td>
                                    <td>
                                        <div class="form-group">
                                            <select class="form-control" id="txtEmpId" required="required">
                                                <option></option>
                                                @foreach (var item in ViewBag.Emp)
                                                {
                                                    <option value="@item.EMP_ID">@item.EMP_NAME</option>
                                                }
                                            </select>
                                        </div>
                                    </td>

                                    <td class="tdleft">
                                        <label>
                                            Target Month</label></td>
                                    <td>
                                        <input type="text" class="form-control" id="txtTargetDate" value="@DateTime.Now.ToString("yyyy-MM")" />
                                    </td>
                                    <td class="tdleft">
                                        <label>
                                            Target</label></td>
                                    <td>
                                        <input type="number" min="0" class="form-control" id="txtTarget" />
                                    </td>

                                </tr>


                            </tbody>
                        </table>
                    </div>
                </form>


            </div>
        </div>

    </div>
</div>
