@{
    ViewBag.Title = "Login";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/login.js")"></script>
}
<div class="container">
    <div id="loginbox" style="margin-top: 10px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>

            <div style="padding-top: 30px" class="panel-body">
                @if ( TempData["alert"] != null){
                <div id="login-alert" class="alert alert-danger col-sm-12">@TempData["alert"]</div>
                }

                <form id="loginform" class="form-horizontal" method="post" role="form" action="@Url.Action("Signin","Home")">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" maxlength="6" type="text" class="form-control" name="username" value="" placeholder="employee id" required="required">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password" required="required">
                    </div>

                    <div style="margin-top: 10px" class="form-group">
                        <!-- Button -->

                        <div class="col-sm-12 controls">
                          
                        <button id="btn-login" type="submit" class="btn btn-success">Login</button>
                        </div>
                    </div>
                </form>



            </div>
        </div>
    </div>
    
</div>
